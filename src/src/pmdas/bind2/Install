# Install the Bind2 PMDA
#

. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=bind2
perl_opt=true
daemon_opt=false

for module in Time::HiRes LWP::UserAgent XML::LibXML List::MoreUtils \
              File::Spec::Functions File::Basename File::Slurp
do
    perl -e "use $module" 2>/dev/null 
    if test $? -ne 0
    then
        echo "$module perl module is not installed"
	status=1
	exit
    fi
done

pmdaSetup
pmdaInstall
exit 0
